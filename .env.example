# Main Application Environment
APP_ENV=development

# --- Web Server Configuration ---
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_SECRET_KEY="a_very_long_and_super_secret_key_for_development_purposes_only_32"

# --- GPIO Pin Configuration (BCM numbering) ---
# The names here MUST match the fields in config/settings.py (without the prefix)
GPIO_PIN_CONVEYOR_RELAY=26
GPIO_PIN_GATE_RELAY=22
GPIO_PIN_STATUS_LED_GREEN=27
GPIO_PIN_STATUS_LED_RED=23
