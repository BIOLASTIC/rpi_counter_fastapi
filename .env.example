# Main Application Environment: 'development' or 'production'
APP_ENV=development

# --- Web Server Configuration ---
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_SECRET_KEY="a_very_long_and_super_secret_key_for_development_purposes_only_32"
SERVER_CORS_ORIGINS='["http://localhost", "http://localhost:8000"]'

# --- Security Configuration ---
# A static API key for server-to-server communication or simple clients
SECURITY_API_KEY="your_secret_api_key_here"
# A secret key for signing JWTs (JSON Web Tokens)
# Generate with: openssl rand -hex 32
SECURITY_JWT_SECRET_KEY="another_super_secret_key_for_jwt_development_32_chars_long"

# --- Database Configuration ---
DB_URL="sqlite+aiosqlite:///./data/box_counter.db"
DB_ECHO=True

# --- Camera Configuration ---
CAMERA_RESOLUTION_WIDTH=1280
CAMERA_RESOLUTION_HEIGHT=720
CAMERA_FPS=30
CAMERA_BUFFER_SIZE=10

# --- GPIO Configuration (BCM Pin Numbers) ---
GPIO_PIN_CONVEYOR_RELAY=26
GPIO_PIN_GATE_RELAY=22
GPIO_PIN_STATUS_LED_GREEN=27
GPIO_PIN_STATUS_LED_RED=23
GPIO_PIN_BUZZER=24

# --- USR-8000 Modbus RTU Configuration ---
MODBUS_PORT=/dev/ttyUSB0
MODBUS_BAUDRATE=9600
MODBUS_DEVICE_ADDRESS=1
MODBUS_TIMEOUT_SEC=1.0
MODBUS_POLLING_MS=100

# Proximity Sensor Channel Mapping
SENSOR_ENTRY_CHANNEL=5
SENSOR_EXIT_CHANNEL=4

# --- Detection Algorithm Configuration ---
DETECTION_CONFIDENCE_THRESHOLD=0.85
DETECTION_BOX_MIN_AREA=5000
DETECTION_BOX_MAX_AREA=50000
