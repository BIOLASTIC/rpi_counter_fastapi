# ----------------------------------------------------
# Main Application Settings
# ----------------------------------------------------
APP_ENV=development
CAMERA_MODE="both"  # Options: "rpi", "usb", "both", "none"

# ----------------------------------------------------
# Logging Settings
# ----------------------------------------------------
LOGGING_VERBOSE_LOGGING=true

# ----------------------------------------------------
# Web Server Settings
# ----------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_SECRET_KEY="your_very_long_and_super_secret_key_here_at_least_32_chars"

# ----------------------------------------------------
# Security Settings
# ----------------------------------------------------
SECURITY_API_KEY="your_secret_api_key_here"

# ----------------------------------------------------
# RASPBERRY PI CAMERA SETTINGS
# ----------------------------------------------------
# Find this value with `libcamera-hello --list-cameras`
CAMERA_RPI_ID="/base/soc/i2c0mux/i2c@1/imx708@1a"
CAMERA_RPI_RESOLUTION_WIDTH=1280
CAMERA_RPI_RESOLUTION_HEIGHT=720
CAMERA_RPI_FPS=30
CAMERA_RPI_JPEG_QUALITY=90
CAMERA_RPI_SHUTTER_SPEED=0
CAMERA_RPI_ISO=0
CAMERA_RPI_MANUAL_FOCUS=0.0

# ----------------------------------------------------
# USB CAMERA SETTINGS
# ----------------------------------------------------
# Find this value with `v4l2-ctl --list-devices`
CAMERA_USB_DEVICE_INDEX=0
CAMERA_USB_RESOLUTION_WIDTH=1280
CAMERA_USB_RESOLUTION_HEIGHT=720
CAMERA_USB_FPS=30
CAMERA_USB_JPEG_QUALITY=90

# ----------------------------------------------------
# General Camera Application Settings
# ----------------------------------------------------
CAMERA_TRIGGER_DELAY_MS=100
CAMERA_CAPTURES_DIR="web/static/captures"

# ----------------------------------------------------
# Redis Settings
# ----------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# ----------------------------------------------------
# GPIO Settings (BCM Pin Numbers)
# ----------------------------------------------------
GPIO_PIN_CONVEYOR_RELAY=26
GPIO_PIN_GATE_RELAY=22
GPIO_PIN_STATUS_LED_GREEN=27
GPIO_PIN_STATUS_LED_RED=23
GPIO_PIN_BUZZER=24

# ----------------------------------------------------
# Modbus RTU Settings
# ----------------------------------------------------
MODBUS_PORT=/dev/ttyUSB0
MODBUS_BAUDRATE=9600
MODBUS_DEVICE_ADDRESS=1
MODBUS_TIMEOUT_SEC=0.2
MODBUS_POLLING_MS=50

# ----------------------------------------------------
# Sensor Channel Settings
# ----------------------------------------------------
SENSORS_ENTRY_CHANNEL=6
SENSORS_EXIT_CHANNEL=2

# ----------------------------------------------------
# Orchestration Settings
# ----------------------------------------------------
ORCHESTRATION_POST_BATCH_DELAY_SEC=5

# ----------------------------------------------------
# Database Settings
# ----------------------------------------------------
DB_URL="sqlite+aiosqlite:///./data/box_counter.db"
DB_ECHO=false